.panel.panel-default
  .panel-heading
    %nav.navbar.navbar-default{role: "navigation"}
      .container-fluid
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.dropdown#project-name
              %a{:href => "#"} #{project.path}
            %li.dropdow.col-md-2n
              %a.dropdown-toggle#project-edit{"href" => "#", "data-toggle" => "dropdown"}
                Edit 
                %span.caret
              %ul.dropdown-menu.col-md-2{role: "menu"}
                %li
                  = link_to "show releases", project_releases_path(project)
                %li
                  = link_to "edit project", edit_project_path(project), :remote => true
                %li
                  = link_to 'delete project', project, :method => :delete, :data => { confirm: 'Are you sure?' }, :remote => true
                %li
                  %a{"data-toggle" => "collapse", "data-parent" => "#accordion",  :href => "#collapse-#{project.id}"} show stages
                %li
                  = link_to 'add new statge', new_project_stage_path(project)


  .panel-collapse.collapse{:id => "collapse-#{project.id}"}
    .panel-body
      / = "#{project.path}" 
      = render :partial => 'stages/index', :locals => {project: project}

