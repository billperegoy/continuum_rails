#project-list
  .btn-toolbar#project-header
    .btn-group
      .btn.btn-primary{:type => "button"} Project List
    .btn-group
      = link_to "New", new_project_path, :class => "btn btn-default", :id => "new-project-button", :remote => true

  - if flash[:notice]
    .notice.alert.alert-success.alert-dismissible
      %button.close{:type => "button", "data-dismiss" => "alert"}
        %span{"aria-hidden" => "true"} &times;
      = flash[:notice]


  .panel-group#accordion
    - @projects.each do |project|
      = render :partial => 'projects/project', :locals => {project: project}

