#project-list
  - if flash[:notice]
    .notice.alert.alert-success.alert-dismissible
      %button.close{:type => "button", "data-dismiss" => "alert"}
        %span{"aria-hidden" => "true"} &times;
      = flash[:notice]


  = link_to "New", new_project_path, :class => "btn btn-primary btn-sm", :id => "new-project-button", :remote => true
  .panel-group#accordion
    - @projects.each do |project|
      = render :partial => 'projects/project', :locals => {project: project}

